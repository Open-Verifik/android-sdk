<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SampleActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/register_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Registrar" />

        <Button
            android:id="@+id/auth_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Autenticar" />

        <Button
            android:id="@+id/document_scanner_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Escanear" />

        <Button
            android:id="@+id/ocr_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ocr" />
        <Button
            android:id="@+id/app_register_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="App Register" />
        <Button
            android:id="@+id/app_login_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="App Login" />
        <Button
            android:id="@+id/app_photo_id_scan_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="App Photo ID Scan" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>